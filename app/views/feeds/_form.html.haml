= simple_form_for(@feed) do |f|
  = f.error_notification
  %form{:role => "form"}
    .form-group
      %label{:for => "name"} Feed name:
      = f.text_field :name, autofocus: true, class: 'form-control'
    .form-group
      %label{:for => "name"} Url:
      = f.text_field :url, autofocus: true, class: 'form-control'
    .form-group-inline
      = f.label :icon
      = f.file_field :icon
      = f.label :twitter
      = f.check_box :twitter, as: :boolean, boolean_style: :inline
    .form-actions
      = f.button :submit
