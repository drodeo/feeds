<meta name="viewport" content="initial-scale=1, maximum-scale=1" />
<p id="notice"><%= notice %></p>




		

<table class="table table-striped  table-condensed">

 <thead>
  <tr>
    <th width="2%"></th>
    <th width="98%"></th>
   
   
   </tr>
  </thead>
 
 <% for i in 0..2 do %> 
 <div class="btn-group">
  
   <button type="button" class="btn btn-default"><%= link_to (Date.today-i).strftime("%d-%m-%y"), data_path(data:(Date.today-i))  %></button>
  
    </div>
 <% end %> 
  <right>       <%= Time.zone.now().strftime("%T") %> </right>
  
  
    <% @pages.includes(:source).each do |a| %>
 	
    <tr>
     
	
	
	
	 
	 <td><h6><%= a.published.to_time().in_time_zone("Moscow").strftime("%R") %></h6>
	  
	 </td>
	
	  
	 <td> 
      
	 <% a.summary= " " if a.summary.blank?%>
      <%= image_tag(a.source.avatar.url(:thumb), class: 'avatar1', :size => "20") %> <%=  link_to a.title, nil, 'href' => a.ref , :target => "_blank" , title: a.summary %></h6></div>

        <div class=inline><%= image_tag(a.image, class: 'avatar', :size => "140") unless a.image.blank? %> <%=markdown(a.summary) %></div>
       

	  
	  </td>
	  
	  
	  
  
	 </tr>
	
    <% end %>
   
 
  
</table>
 

<%= paginate(@pages) %>



